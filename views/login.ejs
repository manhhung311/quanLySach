<!DOCTYPE html>
<html>

<head>
    <title>Admin Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- global level css -->
    <link href="/css/bootstrap4.css" rel="stylesheet" />
    <!-- end of global level css -->
    <!-- page level css -->
    <link href="/css/minimal/blue.css" rel="stylesheet" />
    <link href="/css/bootstrapValidator.min.css" rel="stylesheet" />
    <link href="/css/login2.css" rel="stylesheet" />
    <!-- styles of the page ends-->
    <style>
        body {
            /* background: url(../../img/parallax/back.png); */
            background: url(../../img/night.jpg);
            background-color: #444;
            /* background: url(../../img/parallax/pinlayer2.png), url(../../img/parallax/pinlayer1.png), */
            background: url(../../img/hello1.png), url(../../img/hello20.png),
                /* url(../../img/parallax/back.png); */
                url(../../img/hello.png);
            font-family: 'lato';
        }
    </style>
</head>

<body>
    <div class="container ">
        <div class="row vertical-offset-100">
            <div class=" col-10 col-offset-1 col-sm-6 col-sm-offset-3  col-md-5 col-md-offset-4 col-lg-4 col-lg-offset-4 mx-auto">
                <div class="card ">
                    <div class="card-header bg-default ">
                        <h3 class="text-center">Đăng nhập</h3>
                    </div>
                    <div class="card-body">
                        <form action="<%=link.url.login%>" id="authentication" autocomplete="on" method="post" role="form">
                            <!-- CSRF Token -->
                            <input type="hidden" name="_token" value="{{ csrf_token() }}" />

                            <div class="form-group {{ $errors->first('email', 'has-error') }}">
                                <input class="form-control" placeholder="E-mail" name="user" type="text" value="" />
                                <div class="help-block">
                                    <!-- {!! $errors->first('email', '<span class="help-block">:message</span>') !!} -->
                                </div>
                            </div>
                            <div class="form-group {{ $errors->first('password', 'has-error') }}">
                                <input class="form-control" placeholder="Mật khẩu" name="password" type="password" />
                                <div class="help-block">
                                    <!-- {!! $errors->first('password', '<span class="help-block">:message</span>') !!} -->
                                </div>
                            </div>
                            <div class="form-group">
                                <label>
                                    <input name="remember-me" type="checkbox" value="Remember Me" class="minimal-blue" />
                                    Ghi nhớ đăng nhập
                                </label>
                            </div>
                            <div class="bg-transparent animation flipInX">
                                <a href="#">Quên mật khẩu?</a>
                            </div>

                            <input type="submit" value="Sign In" class="btn btn-primary text-white btn-block btn-lg" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- global js -->
    <script src="/js/admin.js" type="text/javascript"></script>
    <!-- end of global js -->
    <!-- begining of page level js-->
    <script src="/js/TweenLite.min.js"></script>
    <script src="/js/icheck.js" type="text/javascript"></script>
    <script src="/js/bootstrapValidator.min.js" type="text/javascript"></script>
    <script src="/js/login2.js" type="text/javascript"></script>
    <!-- end of page level js-->
</body>

</html>