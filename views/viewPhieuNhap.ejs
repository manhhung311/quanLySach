    <body>
        <%-include('./block/header')%>
        <div class="wrapper">
            <aside class="left-side sidebar-nav">
                <section class="sidebar">
                    <div class="page-sidebar">
                        <h1 style="margin-top: 300px; margin-left: 50px; color: yellow;">Thống <br>Kê</h1>
                    </div>
                </section>
            </aside>
